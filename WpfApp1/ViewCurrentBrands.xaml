<Window x:Class="WpfApp1.ViewCurrentBrands"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="ViewCurrentBrands" Height="450" Width="800">
    <Grid>
        <ListView x:Name="CBrandListViewBox" HorizontalAlignment="Left" Height="100" Margin="184,86,0,0" VerticalAlignment="Top" Width="157" ItemsSource="{Binding brandList.bList}" PreviewMouseDown="CBrandListViewBox_PreviewMouseDown" >
            <ListView.View>
                <GridView>
                    <GridViewColumn  Header="ContactLensManufacturer" Width="150" DisplayMemberBinding="{Binding ManufacName}"/>
                    
                </GridView>
            </ListView.View>
        </ListView>
        <ListView x:Name="ContactsNameBox" HorizontalAlignment="Left" Height="100" Margin="381,86,0,0" VerticalAlignment="Top" Width="100" ItemsSource="{Binding contactsList.selectedCList}" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ContactsName" DisplayMemberBinding = "{Binding Name}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
